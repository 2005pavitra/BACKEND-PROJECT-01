<% layout("layouts/boilerplate") -%>

<body>
  <h2>Create a New Listing</h2>
  <form action="/listings" method="POST">
    <!-- List Name Input -->
    <label for="title">List Name:</label>
    <input type="text" id="title" name="listing[title]" placeholder="Enter list name" required>
    
    <!-- Description Input -->
    <label for="description">Description:</label>
    <textarea id="description" name="listing[description]" placeholder="Enter list description" rows="4"></textarea>
    
    <!-- Image URL Input -->
    <label for="image">Image URL:</label>
    <input type="url" id="image" name="listing[image]" placeholder="Enter image URL">
    
    <!-- Price Input -->
    <label for="price">Price:</label>
    <input type="number" id="price" name="listing[price]" placeholder="Enter price" min="0" step="0.01">
    
    <!-- Location Input -->
    <label for="location">Location:</label>
    <input type="text" id="location" name="listing[location]" placeholder="Enter location">
    
    <!-- Country Input -->
    <label for="country">Country:</label>
    <input type="text" id="country" name="listing[country]" placeholder="Enter country">
    
    <!-- Submit Button -->
    <button type="submit">Create List</button>
  </form>
</body>
</html>
